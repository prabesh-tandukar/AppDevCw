@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

@*<h1 class="text-white text-center">@ViewData["Title"]</h1>*@

<div style="display: flex; justify-content: center; max-width: 100vw; max-height: 100vh">
    
        <form style="margin-top: 60px ;width: 400px; box-shadow: 0px 0px 8px 1px gray; padding: 20px; border-radius: 5px" 
        id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2 class="text-white text-center mt-4">Create a new account</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating my-4">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating my-4">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating my-4">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-floating my-4" style="text-align: center">
               <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" style="width: 100%; padding: 15px 30px; border-radius: 5px; color: #7b8ab8; font-size: 14px">
                   <option disabled selected>-Select Role-</option>
               </select>
            </div>
            <div style="text-align: center">
            <button style="width: 130px" id="registerSubmit" type="submit" class="mt-3 btn btn-outline-info">Register</button>
            </div>
        </form>
    

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
