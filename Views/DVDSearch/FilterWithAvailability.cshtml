@using groupCW.Views.DVDSearch
@model IEnumerable<JoinHelper>


<a asp-controller="DVDSearch" asp-action="DVDWithAvailability"  class="btn btn-outline-info mb-4 mt-3" style="width: 200px">Go Back To Search</a>

<table class="table text-white table-bordered table-striped" style="width: 100%">
    <thead>
        <tr>
            <th style="width: 25%">Actor Name</th>
            <th style="width: 25%">DVD Title</th>
            <th style="width: 25%">Release Date</th>
            <th style="width: 25%">Number of copies on shelve</th>
        </tr>
    </thead>

    <tbody >
        @foreach(var obj in Model)
        {
            <tr>
                <td class="text-white" width="25%">@obj.fName @obj.lName</td>
                <td class="text-white" width="25%">@obj.dvdTitle</td>
                <td class="text-white" width="25%">@obj.releaseDate2</td>
                <td class="text-white" width="25%">@obj.NumberOfCopies</td>

            </tr>
        }
    </tbody>
</table>